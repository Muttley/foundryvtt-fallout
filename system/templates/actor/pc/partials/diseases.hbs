<ol class="items-list">
	<li class="consumable flexrow items-header">
		<div class="flexrow flexlarge item-name upperC">
			{{localize 'FALLOUT.UI.DISEASES'}}
		</div>
		<div class="item-controls">
			<a
				class="item-control
				item-create"
				title="{{localize 'FALLOUT.TEMPLATES.Create_Disease'}}"
				data-type="disease"
			>
				<i class="fas fa-plus"></i>
				{{localize 'FALLOUT.UI.Add'}}
			</a>
			<a
				class="find-from-compendium"
				data-type="disease"
			>
				<i class="fa-solid fa-magnifying-glass"></i>
			</a>
		</div>
	</li>
	{{#each itemsByType.disease as |item id|}}
		{{>	actor/_shared-partials/simple-expandable-item
			basicControlsOnly=true
			item=item
			extraName=(diseaseStatus item)
		}}
	{{/each}}
</ol>
