<li class="item" data-item-id="{{item._id}}">
	<div class="flexrow">
		{{#if (ne item.system.quantity undefined)}}
			<input
				class="item-quantity num-short-2"
				min="0"
				type="number"
				value="{{item.system.quantity}}"
			>
			&nbsp;&nbsp;
		{{/if}}
		<div
			class="item-name flexlarge expandable-info"
			data-item-id="{{item._id}}"
		>
			<h4>
				<a class="resource-label">
					{{item.name}}
					{{#if extraName}}
						&nbsp;({{extraName}})
					{{/if}}
				</a>
			</h4>
		</div>
		<div class="item-controls">
			{{#unless basicControlsOnly}}
				{{#ifCond item.system.stashed '!==' null}}
					<a
						{{#if item.system.stashed}}
							class="item-control item-stash"
						{{else}}
							class="item-control item-stash item-unstashed"
						{{/if}}
						title='{{localize "FALLOUT.UI.stashed"}}'
					>
						<i class="fas fa-briefcase"></i>
					</a>
				{{/ifCond}}
				{{#ifCond item.type '===' 'consumable'}}
					{{#unless isRobot}}
						<a
							class="item-control item-consume"
							title='{{localize "FALLOUT.UI.Consume"}}'
						>
							<i class="{{item.system.consumeIcon}}"></i>
						</a>
					{{/unless}}
				{{/ifCond}}
				{{#if item.canBeEquipped}}
					<a
						{{#if item.system.equipped}}
							class="item-control item-toggle"
						{{else}}
							class="item-control item-toggle item-unequipped"
						{{/if}}
						title='{{localize "FALLOUT.equipped"}}'
					>
						<i class="fas fa-tshirt"></i>
					</a>
				{{/if}}
			{{/unless}}
			<a
				class="item-control item-edit"
				title="{{localize 'FALLOUT.TEMPLATES.Edit_Item'}}"
			>
				<i class="fas fa-edit"></i>
			</a>
			<a
				class="item-control item-delete"
				title="{{localize 'FALLOUT.TEMPLATES.Delete_Item'}}"
			>
				<i class="fas fa-trash"></i>
			</a>
		</div>
	</div>
</li>
