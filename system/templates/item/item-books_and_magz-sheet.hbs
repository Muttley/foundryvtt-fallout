<form class="{{cssClass}}" autocomplete="off">
    {{> item/_shared-partials/header}}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a
			class="item"
			data-tab="attributes"
		>
			{{localize "FALLOUT.TEMPLATES.Attributes"}}
		</a>
        <a
			class="item"
			data-tab="description"
		>
			{{localize "FALLOUT.TEMPLATES.Description"}}
		</a>
    </nav>

    <section class="sheet-body">
        {{!-- Attributes Tab --}}
        <div
			class="tab attributes"
			data-group="primary"
			data-tab="attributes"
		>
            <div class="flexrow resource-row">
                <label for="system.issue" class="resource-label">
					{{localize "FALLOUT.TEMPLATES.Publication"}}
				</label>
                <input
					name="system.publication"
					type="text"
					value="{{system.publication}}"
				>
            </div>

            {{!-- <div class="flexrow resource-row">
                <label for="system.issue" class="resource-label">
					{{localize "FALLOUT.TEMPLATES.Issue"}}
				</label>
                <input
					name="system.issue"
					type="text"
					value="{{system.issue}}"
				>
            </div> --}}

            <div class="flexrow align-left resource-row">
                <label
					class="resource-label"
					for="system.learned"
				>
					{{localize "FALLOUT.TEMPLATES.Learned"}}
				</label>
                <input
					name="system.learned"
					type="checkbox"
					{{#if system.learned}}
						checked
					{{/if}}
				>
            </div>

            <h3 class="resource-label">
				{{localize "FALLOUT.TEMPLATES.Effect"}}
			</h3>
            <div class="description-field">
                {{editor effectHTML
					button=true
					editable=editable
					owner=owner
					target="system.effect"
				}}
            </div>
        </div>

        {{!-- Description Tab --}}
        <div
			class="tab description"
			data-group="primary"
			data-tab="description"
		>
            {{editor descriptionHTML
				button=true
				editable=editable
				owner=owner
				rollData=rollData
				target="system.description"
			}}
        </div>
    </section>
</form>
