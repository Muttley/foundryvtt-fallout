<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/fallout/templates/item/parts/item-header.hbs"}}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="attributes">{{localize "FALLOUT.TEMPLATES.Attributes"}}</a>
        <a class="item" data-tab="description">{{localize "FALLOUT.TEMPLATES.Description"}}</a>
    </nav>

    <section class="sheet-body">
        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="flexrow resource-row">
                <label for="system.issue" class="resource-label">{{localize "FALLOUT.TEMPLATES.Issue"}}</label>
                <input type="text" name="system.issue" value="{{system.issue}}">
            </div>
            <div class="flexrow align-left resource-row">
                <label for="system.learned" class="resource-label">{{localize "FALLOUT.TEMPLATES.Learned"}}</label>
                <input type="checkbox" name="system.learned" {{#ifCond system.learned '==' true}}checked{{/ifCond}}>
            </div>

            <h3 class="resource-label">{{localize "FALLOUT.TEMPLATES.Effect"}}</h3>
            <div class="description-field">
                {{editor effectHTML target="system.effect" button=true owner=owner editable=editable}}
            </div>
        </div>
        {{!-- Description Tab --}}
        <div class="tab description" data-group="primary" data-tab="description">
            {{editor descriptionHTML target="system.description" rollData=rollData button=true owner=owner editable=editable}}
        </div>
    </section>
</form>
