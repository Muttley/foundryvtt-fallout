<form class="{{cssClass}} itemDrop" autocomplete="off">
	{{> item/_shared-partials/header}}

	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="attributes">
			{{localize "FALLOUT.TEMPLATES.Attributes"}}
		</a>
		<a class="item" data-tab="qualities">
			{{localize "FALLOUT.TEMPLATES.Qualities_and_Effects"}}
		</a>
		<a class="items" data-tab="mods">
			{{localize "FALLOUT.MODS.mods"}}
		</a>
		<a class="item" data-tab="description">
			{{localize "FALLOUT.TEMPLATES.Description"}}
		</a>
		<a class="item" data-tab="source">
			{{localize "FALLOUT.TEMPLATES.Source"}}
		</a>
	</nav>

	<section class="sheet-body">
		{{> item/weapon/attributes-tab}}
		{{> item/weapon/qualities-and-effects-tab}}
		{{> item/weapon/mods-tab}}
		{{> item/_shared-partials/description-tab}}
		{{> item/_shared-partials/source}}
	</section>

</form>
