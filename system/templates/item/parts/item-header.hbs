<header class="sheet-header">
    <img
		class="profile-img"
		data-edit="img"
		src="{{item.img}}"
		title="{{item.name}}"
	/>
    <div class="header-fields">
        <div class="flex">
            <h1 class="charname">
				<input
					name="name"
					placeholder="Name"
					type="text"
					value="{{item.name}}"
				/>
			</h1>
            <div class="chaty align-right">
				<i class="fas fa-comment"></i>
			</div>
        </div>
        {{#if system.weight includeZero=true}}
			<div class="grid grid-4col">
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Quantity"}}
					</label>
					<input
						class="num-short-2"
						data-dtype="Number"
						name="system.quantity"
						type="number"
						value="{{system.quantity}}"
					/>
				</div>
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Weight"}}
					</label>
					<input
						class="num-short-2"
						data-dtype="Number"
						name="system.weight"
						type="number"
						value="{{system.weight}}"
					/>
				</div>
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Cost"}}
					</label>
					<input
						class="num-short-3"
						data-dtype="Number"
						name="system.cost"
						type="number"
						value="{{system.cost}}"
					/>
				</div>
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Rarity"}}
					</label>
					<input
						class="num-short-2"
						data-dtype="Number"
						name="system.rarity"
						type="number"
						value="{{system.rarity}}"
					/>
				</div>
			</div>
        {{/if}}
    </div>
</header>
