<form class="{{cssClass}}" autocomplete="off">

	{{> item/_shared-partials/header}}

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="attributes">{{localize "FALLOUT.TEMPLATES.Attributes"}}</a>
		<a class="item" data-tab="effects">{{localize "FALLOUT.TEMPLATES.Effects"}}</a>
	</nav>

	<section class="sheet-body">

		{{!-- Active Effects Tab --}}
		{{> item/_shared-partials/effects-tab}}

		{{!-- Attributes Tab --}}
		<div class="tab attributes" data-group="primary" data-tab="attributes">
			<div class="flexrow resource-row align-mid">
				<label class="resource-label">{{localize "FALLOUT.TEMPLATES.Ranks_current_maximum"}}</label>
				<span class="flexrow align-mid">
					<!-- <label class="text-center">current:</label> -->
					<input class="text-center num-short-3" type="number" name="system.rank.value" value="{{system.rank.value}}">
					<label class="text-center">/</label>
					<!-- <label class="text-center">max:</label> -->
					<input class="text-center num-short-3" type="number" name="system.rank.max" value="{{system.rank.max}}">
				</span>
			</div>
			<div class="flexrow resource-row align-mid">
				<label class="resource-label">{{localize "FALLOUT.TEMPLATES.Requirements"}}</label>
				<input type="text" name="system.requirements" value="{{system.requirements}}">
			</div>
			<div class="resource-row resource-label align-mid">
				<label>{{localize "FALLOUT.TEMPLATES.Description"}}</label>
			</div>
			<div class="description-field">
				{{editor descriptionHTML target="system.description" rollData=rollData button=true owner=owner editable=editable}}
			</div>
		</div>
	</section>

</form>
