<div class="tab" data-group="primary" data-tab="mods">
	<div class="flexrow align-right">
		<span>
			<label class="field-label" for="system.mods.current">
				{{localize "FALLOUT.TEMPLATES.current"}}
			</label>
			<input class="num-short-2"
				   data-dtype="Number"
				   name="system.mods.current"
				   type="number"
				   value="{{system.mods.current}}">
			&sol;
			<input class="num-short-2"
				   data-dtype="Number"
				   name="system.mods.max"
				   type="number"
				   value="{{system.mods.max}}">
			<label class="field-label" for="system.mods.max">
				{{localize "FALLOUT.TEMPLATES.max"}}
			</label>
		</span>
	</div>
	<div class="description-field">
		{{editor modsListHTML
			button=true
			editable=editable
			owner=owner
			target="system.mods.list"
		}}
	</div>
</div>
