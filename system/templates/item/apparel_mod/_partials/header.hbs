<header class="sheet-header">
    <img
		class="profile-img"
		data-edit="img"
		src="{{item.img}}"
		title="{{item.name}}"
	/>
    <div class="header-fields">
        <div class="flex">
            <h1 class="charname">
				<input
					name="name"
					placeholder="Name"
					type="text"
					value="{{item.name}}"
				/>
			</h1>
            <div class="chaty align-right">
				<i class="fas fa-comment"></i>
			</div>
        </div>
		{{#if system.weight includeZero=true}}
			<div class="grid-4-columns">
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Quantity"}}
						<input
							class="num-short-3"
							data-dtype="Number"
							name="system.quantity"
							type="number"
							value="{{system.quantity}}"
						/>
					</label>
				</div>
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Weight"}}
						<input
							class="num-short-3"
							data-dtype="Number"
							name="system.weight"
							type="number"
							value="{{system.weight}}"
						/>
					</label>
				</div>
				<div class="resource">
					<label class="resource-label">
						{{localize "FALLOUT.UI.Cost"}}
						<input
							class="num-short-3"
							data-dtype="Number"
							name="system.cost"
							type="number"
							value="{{system.cost}}"
						/>
					</label>
				</div>
			</div>
        {{/if}}
    </div>
</header>
