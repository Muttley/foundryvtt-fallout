<form class="{{cssClass}}" autocomplete="off">
	{{> item/_shared-partials/header}}

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="attributes">
			{{localize "FALLOUT.TEMPLATES.Attributes"}}
		</a>
		<a class="item" data-tab="description">
			{{localize "FALLOUT.TEMPLATES.Description"}}
		</a>
	</nav>

	{{!-- Sheet Body --}}
	<section class="sheet-body">

		{{!-- Description Tab --}}
		<div class="tab description" data-group="primary" data-tab="description">
			{{editor descriptionHTML
				button=true
				editable=editable
				owner=owner
				rollData=rollData
				target="system.description"
			}}
		</div>

		{{!-- Attributes Tab --}}
		<div class="tab attributes" data-group="primary" data-tab="attributes">
			<div class="flexrow">
				<label>{{localize "FALLOUT.TEMPLATES.Skill_Value"}}</label>
				<input type="number" name="system.value" value="{{system.value}}">
			</div>
			<div class="flexrow">
				<label>{{localize "FALLOUT.TEMPLATES.Skill_Tag"}}</label>
				<input
					type="checkbox"
					name="system.tag"
					{{#ifCond system.tag '==' true}}checked{{/ifCond}}
				>
			</div>
			<div class="flexrow">
				<label>{{localize "FALLOUT.TEMPLATES.Default_Attribute"}}</label>
				<select name="system.defaultAttribute">
					{{selectOptions FALLOUT.ATTRIBUTES
						selected=system.defaultAttribute
						sort=true
					}}
				</select>
			</div>
		</div>
	</section>

</form>
