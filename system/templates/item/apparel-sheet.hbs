<form class="{{cssClass}} itemDrop" autocomplete="off">

    {{> item/_shared-partials/header}}

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="attributes">
			{{localize "FALLOUT.TEMPLATES.Attributes"}}
		</a>

		{{#if system.powerArmor.isFrame}}
			<a class="item" data-tab="frame">
				{{localize "FALLOUT.Item.PowerArmor.Frame"}}
			</a>
		{{/if}}

        <a class="item" data-tab="mods">
			{{localize "FALLOUT.MODS.mods"}}
		</a>

        <a class="item" data-tab="description">
			{{localize "FALLOUT.TEMPLATES.Description"}}
		</a>

        <a class="item" data-tab="effects">
			{{localize "FALLOUT.TEMPLATES.Effects"}}
		</a>

		<a class="item" data-tab="source">
			{{localize "FALLOUT.TEMPLATES.Source"}}
		</a>
	</nav>

	<section class="sheet-body">
		{{> item/apparel/attributes-tab}}

		{{#if system.powerArmor.isFrame}}
		{{> item/apparel/frame-tab}}
		{{/if}}

		{{> item/apparel/mods-tab}}
		{{> item/_shared-partials/description-tab}}
		{{> item/_shared-partials/effects-tab}}
		{{> item/_shared-partials/source}}
	</section>

</form>
