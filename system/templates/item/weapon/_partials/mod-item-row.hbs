<li class="item weapon_mod" data-item-id="{{item._id}}">
	<div class="flexrow" style="flex-wrap: nowrap;">
		<div class="item-name flexshrink" style="flex: 0 0 30%;">
			<div class="item-image">
				<img
					src="{{item.img}}"
					width="24"
					height="24"
					title="{{item.name}}"
				/>
			</div>
			<h4 class="resource-label">
				{{item.name}}
			</h4>
		</div>
		<div class="item-info" style="align-self: center; flex: 0 0 40%;">
			<span>
				{{{item.system.modEffects.summary}}}
			</span>
		</div>
		<div class="item-info" style="align-self: center; flex: 1 1 auto;">
			<span>
				{{{item.system.perks}}}
			</span>
		</div>
		<div class="item-controls" style="align-self: center; flex: 1 0 5%;">
			<a
				{{#if item.system.attached}}
					class="item-control toggle-mod"
					title='{{localize "FALLOUT.TOOLTIPS.Mod.detach"}}'
				{{else}}
					class="item-control toggle-mod item-unequipped"
					title='{{localize "FALLOUT.TOOLTIPS.Mod.attach"}}'
				{{/if}}
			>
				<i class="fa-solid fa-plug"></i>
			</a>
			{{#unless item.system.attached}}
				<a
					class="item-control item-delete"
					title="Delete Item"
				>
					<i class="fas fa-trash"></i>
				</a>
			{{/unless}}
		</div>
	</div>
</li>
