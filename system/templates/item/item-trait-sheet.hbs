{{!-- This template is a fallback for when items don't have more specific templates. --}}
{{!-- Generally, you'll want to make more specific templates when possible. --}}
<form class="{{cssClass}}" autocomplete="off">
	{{> item/_shared-partials/header}}

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="description">{{localize "FALLOUT.TEMPLATES.Description"}}</a>
		<a class="item" data-tab="source">{{localize "FALLOUT.TEMPLATES.Source"}}</a>
	</nav>

	{{!-- Sheet Body --}}
	<section class="sheet-body">

		{{!-- Description Tab --}}
		<div class="tab" data-group="primary" data-tab="description">
			{{editor descriptionHTML
				target="system.description"
				rollData=rollData
				button=true
				owner=owner
				editable=editable
			}}
		</div>

		{{> item/_shared-partials/source}}
	</section>
</form>
